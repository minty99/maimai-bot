# Discord Bot Standalone Development Configuration
# Copy this file to .env in the same directory for local development

# Discord bot token from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Your Discord user ID (Developer Mode → Right-click profile → Copy ID)
DISCORD_USER_ID=your_discord_user_id_here

# Song info server API URL (for standalone development)
SONG_INFO_SERVER_URL=http://localhost:3001

# Record collector server API URL (for standalone development)
RECORD_COLLECTOR_SERVER_URL=http://localhost:3000

# Logging level (optional, default: info)
# Options: trace, debug, info, warn, error
RUST_LOG=info
